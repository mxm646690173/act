    </scroll-view>
  </view>
</template>

<script>
import ANavBar from "../../components/act/a-nav-bar.stml";
import AIcon from "../../components/act/a-icon.stml";

export default {
  name: "simple-icon",
  components: {AIcon, ANavBar},
  data() {
    return {
      icons: []
    }
  },
  installed() {
    this.getIcon()
  },
  methods: {

    getIcon() {

      if (api.appVersion === 'WEB latest') {

        fetch('https://icon.yangyongan.com/api/')
            .then(res => res.json())
            .then(({data}) => {
              this.data.icons = data
            })

      } else {

        api.ajax({
          url: 'https://icon.yangyongan.com/api/'
        }, ret => {
          this.data.icons = ret.data;
        })
      }

    }
  }
}
</script>

